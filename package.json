{
	"name": "@lmcx/three-meshline",
	"version": "5.0.1",
	"description": "Mesh-based replacement for THREE.Line",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"./dist/**/*"
	],
	"scripts": {
		"build": "vite build --mode production",
		"dev": "vite build --watch --mode development",
		"lint": "eslint .",
		"type-check": "run-p --silent type-check:lib type-check:node",
		"type-check:lib": "tsc -p tsconfig.lib.json",
		"type-check:node": "tsc -p tsconfig.node.json",
		"prepare": "husky"
	},
	"peerDependencies": {
		"three": ">=0.154.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.25.0",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@types/node": "^22.14.1",
		"@types/three": "^0.175.0",
		"eslint": "^9.25.0",
		"eslint-plugin-n": "^17.17.0",
		"eslint-plugin-unicorn": "^58.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"npm-run-all2": "^7.0.2",
		"three": "^0.175.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^6.3.2",
		"vite-plugin-dts": "^4.5.3",
		"vite-plugin-glsl": "^1.4.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lmcsu/three-meshline.git"
	},
	"bugs": {
		"url": "https://github.com/lmcsu/three-meshline/issues"
	},
	"keywords": [
		"meshline",
		"lines",
		"threejs",
		"three",
		"mesh",
		"line"
	]
}
